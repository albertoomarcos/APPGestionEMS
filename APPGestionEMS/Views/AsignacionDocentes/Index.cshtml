@model IEnumerable<APPGestionEMS.Models.AsignacionDocentes>

@{
    ViewBag.Title = "Asignación Docentes";
}

<h2>Asignación Docentes</h2>

<p>
    @Html.ActionLink("Añadir asignación", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Curso.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grupo.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grupo.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
